<?xml version="1.0"?>
<config>
    <modules>
        <Spletnik_Nestpay>
            <version>1.0.0.0</version>
        </Spletnik_Nestpay>
    </modules>

    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <custom_field_one>
                    <to_order_payment>*</to_order_payment>
                </custom_field_one>
                <custom_field_two>
                    <to_order_payment>*</to_order_payment>
                </custom_field_two>
            </sales_convert_quote_payment>
        </fieldsets>

        <helpers>
            <nestpay>
                <class>Spletnik_Nestpay_Helper</class>
            </nestpay>
        </helpers>

        <blocks>
            <nestpay>
                <class>Spletnik_Nestpay_Block</class>
            </nestpay>
        </blocks>

        <models>
            <nestpay>
                <class>Spletnik_Nestpay_Model</class>
            </nestpay>
        </models>

        <resources>
            <nestpay_setup>
                <setup>
                    <module>Spletnik_Nestpay</module>
                </setup>
            </nestpay_setup>
        </resources>
    </global>

    <default>
        <payment>
            <nestpay>
                <active>1</active>
                <model>nestpay/standard</model>
                <order_status>pending</order_status>
                <title>Nestpay Payment</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </nestpay>
        </payment>
    </default>

    <frontend>
        <routers>
            <nestpay>
                <use>standard</use>
                <args>
                    <module>Spletnik_Nestpay</module>
                    <frontName>nestpay</frontName>
                </args>
            </nestpay>
        </routers>
        <translate>
            <modules>
                <Spletnik_Nestpay>
                    <files>
                        <default>Spletnik_Nestpay.csv</default>
                    </files>
                </Spletnik_Nestpay>
            </modules>
        </translate>
    </frontend>
</config>